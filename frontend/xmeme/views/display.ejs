<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>XMEME</title>
  <meta charset="utf-8">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/styles.css">
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>
</head>

<body>
  <h1 class="heading">XMEME</h1>
  <div class="body-container">
    <div class="row">
      <div class="col-4">
        <h3 id="create">Create a MEME</h3>
        <div class="form">
          <form action="/" method="post">
            <input class="form-control form-control-lg" type="text" placeholder="Name" name="name">
            <input class="form-control form-control-lg" type="text" placeholder="Caption" name="caption">
            <input class="form-control form-control-lg" type="text" placeholder="URL" name="url">
            <button type="submit" class="btn btn-primary" id="form-submit">Submit</button>
          </form>
        </div>

      </div>
      <div class="col-8">

        <% for(i=0; i<startingContent.length; i++) { %>
          <div class="meme-container col-5">
            <h5>
              <%= startingContent[i].name %>
            </h5>
            <p style="font-size: 0.7em; padding-left: 10px;">
              <%= startingContent[i].timestamp %>
            </p>
            <div class="img-container">
              <img src=<%=startingContent[i].url %>>
            </div>
            <br>
            <h5>
              <%= startingContent[i].caption %>
            </h5>


            <button type="button" class="btn btn-primary btn-edit float-right" data-toggle="modal"
              data-target="#exampleModal/<%= startingContent[i].id %>">
              Edit
            </button>

            <!-- Modal -->
            <form action="/memes/<%= startingContent[i].id %>" method="post">
              <div class="modal fade" id="exampleModal/<%= startingContent[i].id %>" tabindex="-1" role="dialog"
                aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Edit Meme</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <input type="hidden" name="memeID" value=startingContent[i].id>
                      <input class="form-control form-control-lg" type="text" placeholder="Caption" name="edit_caption">
                      <input class="form-control form-control-lg" type="text" placeholder="URL" name="edit_url">
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                      <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                  </div>
                </div>
              </div>
            </form>
          </div>
          <% } %>


      </div>

    </div>
  </div>


</body>

</html>